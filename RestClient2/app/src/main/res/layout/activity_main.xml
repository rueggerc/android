<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"></include>

    <Button
        android:id="@+id/getBooksButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorButtonBackground"
        android:textColor="@color/colorWhite"
        android:text="List Books"
        android:onClick="callGetBooks"/>

    <Button
        android:id="@+id/getPetsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorButtonBackground"
        android:onClick="callGetPets"
        android:text="List Pets"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/createBookButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorButtonBackground"
        android:textColor="@color/colorWhite"
        android:text="Add Book"
        android:onClick="callAddBook"/>

    <Button
        android:id="@+id/createPetButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorButtonBackground"
        android:textColor="@color/colorWhite"
        android:text="Add Pet"
        android:onClick="callAddPet"/>

    <Button
        android:id="@+id/getImageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorButtonBackground"
        android:textColor="@color/colorWhite"
        android:text="Get Image"
        android:onClick="callGetImage"/>


    <LinearLayout
        android:id="@+id/photos"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:src="@drawable/oscar" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:src="@drawable/captain" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:src="@drawable/darwin" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:src="@drawable/drone" />

    </LinearLayout>

    <!--
    <TextView
        android:id="@+id/TextView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Placeholder" >
    </TextView>
    -->

</LinearLayout>